/* pages/my/my.wxss */
.name{
  height:362rpx;
  width:100%;
  background:#fa5757;
  text-align:center;
  font-size:35rpx;
  color:#fff;
}
.name image{
  height:200rpx;
  width:200rpx;
  margin-top:50rpx;
}
.list{
	height:880rpx;
	width:100%;
	margin-top:36rpx;
	margin-bottom:154rpx;
}
.list .join,.list .release,.list .trip,.list .settled,.list .establish,.list .authentication,.list .proposal,.list .message{
	height:110rpx;
	width:100%;
	line-height:110rpx;
	font-size:32rpx;
	color:#333;
}
.join image,.release image,.trip image,.settled image,.establish image,.authentication image,.proposal image,.message image{
	height:42rpx;
	width:42rpx;
	padding-left:30rpx;
	margin-top:36rpx;
	float:left;
}
.join text,.release text,.trip text,.settled text,.establish text,.authentication text,.proposal text,.message text{
	padding-left:35rpx;
	float:left;
}
.list .to{
	width:20rpx;
	height:33rpx;
	margin-right:30rpx;
	float:right;
}
.buttom{
	height:98rpx;
	border-top:2rpx solid #dddddd;
	position:fixed;
	bottom:0;
	left:0;
}
.buttom .touchDay,.buttom .find,.buttom .my{
	width:250rpx;
	height:100%;
	float:left;
	text-align:center;
	font-size:20rpx;
	color:#666666;
	background:#fff;
}
.touchDay image{
	width:42rpx;
	height:42rpx;
	margin-top:20rpx;
}
.touchDay view{
	color:#fa5757;
}
.find image{
	width:49rpx;
	height:42rpx;
	margin-top:21rpx;
}
.my image{
	width:35rpx;
	height:40rpx;
	margin-top:22rpx;
}